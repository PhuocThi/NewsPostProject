@model News.Web.Models.ViewModels.EditTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Cập nhật thông tin thẻ</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">ID</label>
                <input class="form-control" type="text" id="id" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Tên thẻ</label>
                <input class="form-control" type="text" id="name" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Tên hiển thị</label>
                <input class="form-control" type="text" id="displayName" asp-for="DisplayName" />
                <span class="text-danger" asp-validation-for="DisplayName"></span>
            </div>

            <div class="mb-3">
                <div class="d-flex">
                    <button class="btn btn-dark" type="submit">Xác nhận</button>
                    <button class="btn btn-danger ms-2" asp-action="Delete" asp-controller="AdminTags"
                            asp-area="" type="submit">
                        Xóa
                    </button>
                </div>
            </div>


        </form>
    }
    else
    {
        <p>Không tìm thấy thẻ!</p>
    }
    
</div>

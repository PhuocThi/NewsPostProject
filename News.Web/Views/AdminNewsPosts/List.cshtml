@model List<News.Web.Models.Domain.NewsPost>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Tất cả tin tức</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model!=null && Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Tiêu đề</th>
                    <th>Thẻ</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in item.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td class="d-flex justify-content-center">
                            <a asp-action="Edit" asp-area="" asp-controller="AdminNewsPosts"
                               asp-route-id="@item.Id" class="btn btn-primary">
                                Cập nhật
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }else
    {
        <p>Không tìm thấy tin tức!</p>
    }
    
</div>